{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "trailingComma": "none",
  "printWidth": 80,
  "importOrder": [
    "^react(/.*)?$",
    "<THIRD_PARTY_MODULES>",
    "^(@/app|@/pages|@/widgets|@/features|@/entities|@/declarations|@/shared)(/.*|$)",
    "^[./|~/]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
